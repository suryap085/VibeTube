<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/nav_header_background"
    android:fitsSystemWindows="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Status bar spacer for older Android versions -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="top"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

    <!-- User Avatar -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userAvatarImageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="12dp"
        android:background="@color/primary_variant"
        android:contentDescription="User Avatar"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_account_circle"
        app:shapeAppearanceOverlay="@style/CircularImageView"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <!-- User Name -->
    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="VibeTube User"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <!-- User Stats Summary -->
    <TextView
        android:id="@+id/userStatsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Welcome to your library"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@color/white"
        android:alpha="0.8" />

    <!-- Achievement Badge (if any recent achievements) -->
    <LinearLayout
        android:id="@+id/achievementBadgeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/achievement_badge_background"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_star"
            app:tint="@color/achievement_gold" />

        <TextView
            android:id="@+id/achievementBadgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Achievement!"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    </LinearLayout>

</FrameLayout>
