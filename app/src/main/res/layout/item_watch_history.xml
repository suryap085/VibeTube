<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Video Thumbnail -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="68dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/videoThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_video_placeholder" />

                    <!-- Duration Badge -->
                    <TextView
                        android:id="@+id/videoDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="4dp"
                        android:background="@drawable/duration_badge_background"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="10:30"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <!-- Completed Badge -->
                    <ImageView
                        android:id="@+id/completedBadge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_check_circle"
                        android:visibility="gone"
                        app:tint="@color/success" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Video Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title and Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/videoTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Video Title"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/categoryChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/category_chip_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="Music"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Channel Name -->
                <TextView
                    android:id="@+id/channelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Channel Name"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <!-- Watch Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/watchProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="65"
                        app:indicatorColor="@color/primary"
                        app:trackColor="@color/progress_track"
                        app:trackThickness="3dp" />

                    <TextView
                        android:id="@+id/progressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="6:45 / 10:30"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Watched Date -->
                <TextView
                    android:id="@+id/watchedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Today at 14:30"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="@color/error"
                android:textSize="11sp"
                app:icon="@drawable/ic_delete"
                app:iconSize="14dp"
                app:iconTint="@color/error" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/resumeButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:text="Resume"
                android:textAllCaps="false"
                android:textSize="11sp"
                app:icon="@drawable/ic_play_arrow"
                app:iconSize="14dp" />

        </RelativeLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
